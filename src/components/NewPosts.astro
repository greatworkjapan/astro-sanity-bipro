---
interface Post {
  slug: string;
  title: string;
  excerpt: string;
  publishedAt: string;
}
interface Props {
  posts: Post[];
}
const { posts } = Astro.props;
---
<section class="py-16 bg-white sm:py-24">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        最新記事・人気コンテンツ
      </h2>
      <p class="mt-4 text-lg text-gray-600">
        サロン運営に役立つ最新情報をお届けします。
      </p>
    </div>
    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {posts.map(post => (
        <article class="flex flex-col rounded-2xl shadow-lg overflow-hidden">
          <div class="flex-1 bg-white p-6 flex flex-col justify-between">
            <div class="flex-1">
              <p class="text-sm font-medium text-indigo-600">
                <time datetime={post.publishedAt}>{new Date(post.publishedAt).toLocaleDateString('ja-JP')}</time>
              </p>
              <a href={`/blog/${post.slug}`} class="block mt-2">
                <p class="text-xl font-semibold text-gray-900 hover:text-indigo-600">{post.title}</p>
                <p class="mt-3 text-base text-gray-500">{post.excerpt}</p>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
    <div class="mt-12 text-center">
        <a href="/blog" class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
            すべての記事を見る
        </a>
    </div>
  </div>
</section>
